{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@logosophe/common": ["./packages/common"],
      "@logosophe/database": ["./packages/database"],
      "@logosophe/config": ["./packages/config"]
    }
  },
  "include": [
    "apps/*/next-env.d.ts",
    "apps/*/**/*.ts",
    "apps/*/**/*.tsx",
    "packages/*/**/*.ts",
    "packages/*/**/*.tsx"
  ],
  "exclude": ["node_modules", "**/node_modules"]
} 